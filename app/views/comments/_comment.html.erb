<p><%= comment.content %></p>

<% if user_signed_in? %>
	<% if @message.user_id == current_user.id %>
		<%= link_to "Edit", edit_message_comment_path(comment.message, comment) %>
		<%= link_to "Delete", message_comment_path(comment.message, comment), method: :delete, 
								data: { confirm: "Are you sure?"} %>
	<% end %>
<% end %>